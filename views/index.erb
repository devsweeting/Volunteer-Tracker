<h1>Welcome to Volunteer Tracker</h1>

<h2>Available Projects:</h2>
<div class="row">
<% if @projects.any?() %>
<p>Click on a project to see its volunteers:</p>

<ul>
  <% @projects.each do |project| %>
  <li><p><strong>Title:</strong> <a href="/projects/<%= project.id() %>"><%= project.name() %></a></li>
    <% end %>
  </ul>
  <% else %>
  <p>There are no projects yet!</p>
  <% end %>
</div>

<br>

<h2>Available Volunteers:</h2>
<div class="row">
  <% @volunteers.each do |volunteer| %>
    <div class="col-md-3">
      <div class="well">
        <p><strong>Title:</strong> <%= volunteer.title %></p>
        <a href="/edit_volunteer/<%= volunteer.id %>"> edit </a>
      </div>
    </div>
  <% end %>
</div>

<br>

